<% provide(:title, 'Add Student') %>
<h1>Add a Student</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@student) do |f| %>
    <%= render 'shared/error_students' %>

      
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  
    <%= f.label :address %><br>
    <%= f.text_field :address %>

    <%= f.label :city %><br>
    <%= f.text_field :city %>
  
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  
    <%= f.label :email %><br>
    <%= f.text_field :email %>
    
    <div class="pull-right">
      <%= f.submit "Submit", class: "btn btn-large btn-info" %>
      <%= link_to 'Cancel', students_path, class: "btn btn-large btn-info"  %>
    </div>
    <% end %>
  </div>
</div>