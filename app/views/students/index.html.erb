<div class="pull-right">
  <%= link_to 'Add a Student', new_student_path, class: "btn btn-large btn-success" %>
</div>

<% provide(:title, 'All students') %>
<h1>Students</h1>


<%= search_form_for @search do |f| %>
    <%= f.text_field :name_or_address_or_city_or_state_or_country_or_zip_or_phone_or_email_cont, placeholder: 'Name, address, city, state, country, phone, email' %>
    <%= f.submit "Search", class: 'btn' %>
<% end %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
   <tr>
    <th><%= sort_link(@search, :name,"Name") %></th>
    <th><%= sort_link(@search, :address,"Address") %></th>
    <th><%= sort_link(@search, :city,"City") %></th>
    <th><%= sort_link(@search, :state,"State") %></th>
    <th><%= sort_link(@search, :country,"Country") %></th>
    <th><%= sort_link(@search, :zip,"Zip") %></th>
    <th><%= sort_link(@search, :phone,"Phone") %></th>
    <th><%= sort_link(@search, :email,"Email") %></th>

    <th width="188"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.address %></td>
        <td><%= student.city %></td>
        <td><%= student.state %></td>
        <td><%= student.country %></td>
        <td><%= student.zip %></td>
        <td><%= student.phone %></td>
        <td><%= link_to student.email, new_student_message_path(student) %></td>
        <td>
          <%= link_to 'Show', student, class: 'btn btn-xs' %>
          <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-xs btn-info' %>
          <%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
