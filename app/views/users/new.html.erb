<% provide(:title, 'Sign Up') %>
<h1>New User</h1>

<div class="row-fluid">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.submit "Create a User", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>